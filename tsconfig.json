{
  "compilerOptions": {
    "target": "esnext",
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "lib": ["es2015"]
  },
  "include": ["src"],
  "paths": {
    "@components/*": ["./src/components/*"],
    "@idb/*": ["./src/idb/*"],
    "@redux/*": ["./src/redux/*"],
    "@store/*": ["./src/store/*"]
  }
}
